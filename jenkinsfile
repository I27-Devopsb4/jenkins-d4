pipeline {
    agent {
        label 'java-agent-slave'
    }
    stages {
        stage ('build') {
            steps {
                  echo "This is the stage for building MVN app"
                  sh 'hostname -i'
            }

        }
        stage ('ScriptedStage') {
            steps {
                echo "******Executing Scripted stages*******"

                script {
                    def course = "k8s"
                    if(course == "k8s") {
                        println("Thanks for enrolling into $course")
                    }
                    else ("Do learn k8s")
                }
                sleep 10
            }
        }
    }
}
